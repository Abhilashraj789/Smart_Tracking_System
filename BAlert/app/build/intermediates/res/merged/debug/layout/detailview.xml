<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="First Name" />

    <TextView
        android:id="@+id/textfname"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textfname"
        android:text="Middle Name" />

    <TextView
        android:id="@+id/textmname"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textfname"
        android:layout_below="@+id/textView3"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textmname"
        android:text="Last Name" />

    <TextView
        android:id="@+id/textlname"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textlname"
        
        android:text="Standard" />

    <TextView
        android:id="@+id/textstd"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView7"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textstd"
        android:text="Section" />

    <TextView
        android:id="@+id/textsec"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textsec"
        android:text="Registeration Number" />

    <TextView
        android:id="@+id/textreg"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView11"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="162dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textreg"
        android:text="Latitude" />

    <TextView
        android:id="@+id/textlat"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView13"
        android:background="#999999" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textlon"
        android:text="Mobile No." />

    <TextView
        android:id="@+id/textmob"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView17"
        android:background="#999999" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#000000"
        android:text="Back"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textfname"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="162dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textreg"
        android:text="Longitude" />

    <TextView
        android:id="@+id/textlon"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView13"
        android:background="#999999" />

</RelativeLayout>